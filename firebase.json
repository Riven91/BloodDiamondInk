{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store, must-revalidate"
          },
          {
            "key": "Clear-Site-Data",
            "value": "\"cache\", \"storage\", \"service-worker\""
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store, must-revalidate"
          },
          {
            "key": "Clear-Site-Data",
            "value": "\"cache\", \"storage\", \"service-worker\""
          }
        ]
      },
      {
        "source": "_next/static/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "public": "public"
  }
}